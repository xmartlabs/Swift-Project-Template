platform :ios, '10.0'
use_frameworks!

# Add Application pods here
def app_pods
    pod 'Alamofire', '~> 4.8'
    pod 'AlamofireImage', '~> 3.5'
    pod 'AsyncSwift', '~> 2.0'
    pod 'Crashlytics'
    pod 'Device', '~> 3.1'
    pod 'DynamicColor', '~> 4.0'
    pod 'Eureka', '~> 4.3'
    pod 'Fabric', '~> 1.9'
    pod 'KeychainAccess', '~> 3.1'
    pod 'NVActivityIndicatorView', '~> 4.6'
    pod 'OperaSwift', :git => 'https://github.com/xmartlabs/Opera.git', :branch => 'migration/swift4_2'
    pod 'R.swift', '~> 5.0.2'
    pod 'RealmSwift', '~> 3.0'
    pod 'Result', '~> 4.0'
    pod 'RxAlamofire', '~> 4.0'
    pod 'RxCocoa', '~> 4.0'
    pod 'RxSwift', '~> 4.0'
    pod 'SwiftDate', '~> 5.0'
    pod 'WebLinking', '~> 2.0'
end

def testing_pods
    pod 'Quick', '~> 1.0'
    pod 'Nimble', '~> 7.0'
end

target 'XLProjectName' do
  app_pods
end

target 'XLProjectName-Staging' do
  app_pods
end

target 'Tests' do
  testing_pods
end

target 'UITests' do
  testing_pods
end

